<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:layout_gravity="end" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="@dimen/text_max_margin"
                    android:textColor="@color/colorData"
                    android:textSize="25sp"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1"
                    android:id="@+id/time_begin_date" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="@dimen/text_max_margin"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/place_holder"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="@dimen/text_max_margin"
                    android:textColor="@color/colorTime"
                    android:textSize="25sp"
                    android:gravity="center_vertical|left"
                    android:layout_weight="1"
                    android:id="@+id/time_begin_time" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="@dimen/text_max_margin"
                    android:textColor="@color/colorData"
                    android:textSize="25sp"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1"
                    android:id="@+id/time_end_date" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="@dimen/text_max_margin"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/place_holder"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="@dimen/text_max_margin"
                    android:textColor="@color/colorTime"
                    android:textSize="25sp"
                    android:gravity="center_vertical|left"
                    android:layout_weight="1"
                    android:id="@+id/time_end_time" />

            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="@dimen/text_max_margin"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/place_holder"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="@dimen/text_max_margin"
                    android:textColor="@color/colorResult"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/time_result" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="@dimen/text_max_margin"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/place_holder"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>